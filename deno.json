{
  "lock": false,
  "tasks": {
    "cov": "deno test -A --coverage=.cov && deno coverage .cov",
    "lcov": "deno coverage .cov --lcov > .lcov",
    "fix": "deno fmt && deno lint && deno test -A",
    "ci": "deno fmt --check && deno lint && deno task lcov && bash codecov.sh .lcov"
  },
  "compilerOptions": {
    "jsxImportSource": "ansiml",
    "jsx": "react-jsx"
  },
  "fmt": {
    "exclude": [
      ".cov"
    ]
  },
  "lint": {
    "exclude": [
      ".cov"
    ]
  }
}
